{
  "name": "timetracker",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "type-check": "turbo type-check",
    "clean": "turbo clean && rm -rf node_modules",
    "build:windows": "pwsh -ExecutionPolicy Bypass -File scripts/windows/build-bundle.ps1",
    "test:windows": "pwsh -ExecutionPolicy Bypass -File scripts/windows/test-bundle.ps1"
  },
  "devDependencies": {
    "turbo": "^2.3.0",
    "typescript": "^5.7.0"
  },
  "engines": {
    "node": ">=20"
  },
  "packageManager": "pnpm@9.15.0"
}
